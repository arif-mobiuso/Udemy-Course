<div class="notes">
    <div class="fs-3">Notes</div>
    <% notes.forEach((note) => {%>
        <ul>
            <li class="fs-5"><%= note.note %></li>
        </ul>
    <% }); %>
</div>

<form action="/books/<%=bookId%>/notes" method="post">
    <textarea name="note" id="noteInput" cols="100" hidden="true" rows="5" ></textarea>
    <button type="submit" id="done" class="btn btn-dark" hidden="true"> Done</button>
</form>
<button id="add" onclick="handler()"> Add Note</button>

  <script>
    function handler() {
        document.getElementById('add').setAttribute("hidden", true);
        document.getElementById('noteInput').removeAttribute("hidden");
        document.getElementById('done').removeAttribute("hidden")
    }
  </script>